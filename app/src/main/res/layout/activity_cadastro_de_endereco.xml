<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bt_cadastro_endereco"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_cadastro_endereco_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="Id do usuário"
        android:inputType="numberDecimal"
        tools:text="3" />

    <EditText
        android:id="@+id/et_cadastro_endereco_cep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="Cep"
        android:inputType="textPostalAddress"
        tools:text="38400123" />

    <EditText
        android:id="@+id/et_cadastro_endereco_estado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="Estado"
        android:inputType="textPersonName"
        tools:text="Minas Gerais" />

    <EditText
        android:id="@+id/et_cadastro_endereco_cidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="Cidade"
        android:inputType="textPersonName"
        tools:text="Uberlândia" />

    <EditText
        android:id="@+id/et_cadastro_endereco_bairro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="Bairro"
        android:inputType="textPersonName"
        tools:text="Santa Mônica" />

    <EditText
        android:id="@+id/et_cadastro_endereco_logradouro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="Logradouro"
        android:inputType="textPersonName"
        tools:text="Logradouro da Silva" />

    <EditText
        android:id="@+id/et_cadastro_endereco_numero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="Número"
        android:inputType="numberDecimal"
        tools:text="1850" />

    <EditText
        android:id="@+id/et_cadastro_endereco_referencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="Referência"
        android:inputType="textPersonName"
        tools:text="Perto de casa!" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:onClick="cadastrar"
        android:text="OK" />
</LinearLayout>