<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="#E8E3E3">

    <TextView
        android:id="@+id/rv_lista_de_produto_modelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Modelo" />

    <TextView
        android:id="@+id/rv_lista_de_produto_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_lista_de_produto_modelo"
        tools:text="Status Veiculo" />

    <TextView
        android:id="@+id/rv_lista_de_produto_cor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/rv_lista_de_produto_modelo"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Cor" />

    <TextView
        android:id="@+id/rv_lista_de_produto_preco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/rv_lista_de_produto_status"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="preço" />

    <TextView
        android:id="@+id/rv_lista_de_produto_descricao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_lista_de_produto_status"
        tools:text="Descrição" />
</androidx.constraintlayout.widget.ConstraintLayout>