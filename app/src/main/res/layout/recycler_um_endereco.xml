<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/rv_lista_de_endereco_estado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E8E3E3"
        android:textColor="#000000"
        android:textSize="26sp"
        tools:text="Minas Gerais" />

    <TextView
        android:id="@+id/rv_lista_de_endereco_cidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E8E3E3"
        android:textColor="#000000"
        android:textSize="26sp"
        tools:text="UberlÃ¢ndia" />

    <TextView
        android:id="@+id/rv_lista_de_endereco_logradouro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E8E3E3"
        android:textColor="#000000"
        android:textSize="26sp"
        tools:text="Logradouro da Silva" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rv_lista_de_endereco_cep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:background="#E8E3E3"
            android:textColor="#000000"
            android:textSize="26sp"
            tools:text="38400123" />

        <TextView
            android:id="@+id/rv_lista_de_endereco_numero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#E8E3E3"
            android:textColor="#000000"
            android:textSize="26sp"
            tools:text="1234" />

    </LinearLayout>

</LinearLayout>